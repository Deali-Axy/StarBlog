@using StarBlog.Share.Extensions
@model Post

<div class="col-md-6">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col-8 p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary">@Model.Category.Name</strong>
            <h5 class="mb-0">@Model.Title</h5>
            <div class="mb-1 text-muted">@Model.LastUpdateTime.ToShortDateString()</div>
            <p class="card-text mb-auto">@Model.Summary.Limit(50)</p>
            <a class="stretched-link"
               asp-controller="Blog" asp-action="Post" asp-route-id="@Model.Id">
                阅读全文
            </a>
        </div>
        <div class="col-4 d-flex justify-content-end">
            <partial name="Widgets/Image" model="new ImageViewModel{Alt=Model.Title, Width=200, Height=250}"/>
        </div>
    </div>
</div>